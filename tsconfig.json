{
  "include": ["src/**/*"],
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "noImplicitAny": false,
    "rootDir": "src",
    "outFile": "dist/index.d.ts",
    "module": "esnext",
    "target": "esnext",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "newLine": "lf",
    "composite": true
  }
}
